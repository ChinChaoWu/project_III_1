@using CharmingNew.Controllers
@model CharmingNew.Models.charmingEntities1
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 巧米捏塑工作坊</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

</head>
<body>
    <div class="container-fluid">
        <!-- .navbar-expand-{sm|md|lg|xl}決定在哪個斷點以上就出現漢堡式選單 -->
        <!-- navbar-dark 文字顏色 .bg-dark 背景顏色 -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-warning">

            <!-- .navbar-brand 左上LOGO位置 -->
            <a class="navbar-brand" style="position:relative" href="index">
                <img src="~/Image/charming.png" width="180" height="30" class="d-inline-block align-top" alt="" >
                <span class="h3 mx-1"></span>
            </a>
            <!-- .navbar-toggler 漢堡式選單按鈕 -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <!-- .navbar-toggler-icon 漢堡式選單Icon -->
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- .collapse.navbar-collapse 用於外層中斷點群組和隱藏導覽列內容 -->
            <!-- 選單項目&漢堡式折疊選單 -->
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <!-- active表示當前頁面 -->
                    <li class="nav-item active">
                        @*<a class="nav-link" href="index">首頁<span class="sr-only">(current)</span></a>*@
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="About">關於巧米</a>
                    </li>
                    <!-- .dropdown Navbar選項使用下拉式選單 -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">作品集</a>
                        <!-- .dropdown-menu 下拉選單內容 -->
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item" href="PortfolioZUO">傳統看桌</a>
                            <a class="dropdown-item" href="Portfolio">造型捏塑</a>
                        </div>
                    </li>
                </ul>
                <a href="Login"><button class="btn btn-outline-light" type="submit">LOGIN </button> </a>

                <!--<form class="form-inline my-2 my-lg-0" >
                <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
                <a href="Login" class="btn btn-outline-light btn-lg active" role="button" aria-ressed="true">LOGIN</a>-->

            </div>

        </nav>
    </div>
    @RenderBody()
    <div class="container body-content">

        <hr />
        <footer>
           

            <p>&copy; @DateTime.Now.Year - 巧米捏塑工作坊</p>


        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>



</html>