
@{
    ViewBag.Title = "Order";

}


<div class=" container" style="padding-top:50px">

    

    <form class="form-horizontal" method="post" action="">
        <fieldset>

            <!-- Form Name -->
            <div>
                <h2>看桌訂購</h2>
            </div>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="E-mail">E-mail</label>
                <div class="col-md-4">
                    <!-- <input id="Email" name="Email" type="text" placeholder="" class="form-control input-md" required=""> -->
                    <input id="Email" name="Email" type="text" class="form-control input-md" value=" @Session["userName"].ToString() ">
                   
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="userName">姓名 / 公司</label>
                <div class="col-md-4">
                    <input id="OrderBy" name="OrderBy" type="text" placeholder="" class="form-control input-md" required="">

                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="Date">訂購日期</label>
                <div class="col-md-4">
                    <input id="OrderDate" name="OrderDate" type="text"  class="form-control input-md" value="@DateTime.Now.ToString()">

                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="PackDate">交貨日期</label>
                <div class="col-md-4">
                    <input id="PackDate" name="PackDate" type="text" placeholder="西元/月份/日期" class="form-control input-md" required="">

                </div>
            </div>

            <!-- Select Basic -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="Number">聯桌數量</label>
                <div class="col-md-2">
                    <select id="Number" name="Number" class="form-control">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="5">6</option>
                    </select>
                </div>
            </div>

            <!-- Select Basic -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="HeadTable">桌頭</label>
                <div class="col-md-2">
                    <select id="HeadTable" name="HeadTable" class="form-control">
                        <option value="0">無</option>
                        <option value="1">龍</option>
                        <option value="2">鳳</option>
                        <option value="3">麒麟</option>

                    </select>
                </div>
            </div>

            <!-- Select Basic -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="EndTable">桌尾</label>
                <div class="col-md-2">
                    <select id="EndTable" name="EndTable" class="form-control">
                        <option value="0">無</option>
                        <option value="1">八仙</option>
                        <option value="2">觀音</option>
                        <option value="3">彌勒</option>
                        <option value="4">濟公</option>
                    </select>
                </div>
            </div>

            <!-- Button -->

            <div class="form-group">
                <label class="col-md-4 control-label" for="OrderBtn" ></label>
                <div class="col-md-4">
                    <button id="OrderBtn" name="OrderBtn" class="btn btn-warning" >確認訂購</button>
                </div>
            </div>

        </fieldset>
    </form>
</div>
@if (TempData["message"] != null)
{
    <script type="text/javascript">
        var message = @Html.Raw(Json.Encode(TempData["message"]));
        alert(message);    
    </script>}

    <script type="text/javascript">

        window.history.forward(1);

    </script>
